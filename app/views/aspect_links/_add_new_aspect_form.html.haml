%div#add_new_aspect
  %p
    %button#add_new_aspect_toggle.btn.btn-primary Add New Aspect Toggle
  
  %div#add_new_aspect_form{:style=>"display:none"}
    = form_for @aspect_link, :url => { :controller => "aspect_links", :action => "add_new_aspect" }, :html => { :class => 'form-horizontal' } do |f|

      = fields_for :aspect do |aspect_form|
        .control-group
          .control-label Title
          .controls
            = aspect_form.text_field :title, :class => 'text_field'

      .control-group
        = f.label :note, :class => 'control-label'
        .controls
          = f.text_area :note, :rows => 3, :class => 'text_area'
      = f.hidden_field(:aspected_id, :value => @aspect_link.aspected_id)
      = f.hidden_field(:aspected_type, :value => @aspect_link.aspected_type)
      .form-actions
        = f.submit 'Add Aspect', :class => 'btn btn-primary'
