- model_class = AspectLink
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:aspected_id) + ':'
  %br
  = @aspect_link.aspected_id
%p
  %strong= model_class.human_attribute_name(:aspected_type) + ':'
  %br
  = @aspect_link.aspected_type
%p
  %strong= model_class.human_attribute_name(:aspect_id) + ':'
  %br
  = @aspect_link.aspect_id
%p
  %strong= model_class.human_attribute_name(:note) + ':'
  %br
  = @aspect_link.note

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), aspect_links_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_aspect_link_path(@aspect_link), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), aspect_link_path(@aspect_link), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
