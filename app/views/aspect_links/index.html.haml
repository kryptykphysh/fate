- model_class = AspectLink
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:aspected_id)
      %th= model_class.human_attribute_name(:aspected_type)
      %th= model_class.human_attribute_name(:aspect_id)
      %th= model_class.human_attribute_name(:note)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @aspect_links.each do |aspect_link|
      %tr
        %td= link_to aspect_link.id, aspect_link_path(aspect_link)
        %td= aspect_link.aspected_id
        %td= aspect_link.aspected_type
        %td= aspect_link.aspect_id
        %td= aspect_link.note
        %td=l aspect_link.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_aspect_link_path(aspect_link), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), aspect_link_path(aspect_link), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_aspect_link_path, :class => 'btn btn-primary'
