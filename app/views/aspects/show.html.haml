- model_class = Aspect
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @aspect.title
%p
  %strong= model_class.human_attribute_name(:type) + ':'
  %br
  = @aspect.type

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), aspects_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_aspect_path(@aspect), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), aspect_path(@aspect), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
