- model_class = Aspect
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:type)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @aspects.each do |aspect|
      %tr
        %td= link_to aspect.title, aspect_path(aspect)
        %td= aspect.type
        %td=l aspect.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_aspect_path(aspect), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), aspect_path(aspect), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_aspect_path, :class => 'btn btn-primary'
