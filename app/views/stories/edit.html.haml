- model_class = Story
.page-header
  %h1=t '.title', :default => t('helpers.titles.edit', :model => model_class.model_name.human, :default => "Edit #{model_class.model_name.human}")
= render :partial => "form"

%h3 Aspects
= render :partial => 'aspect_links/show_collection', :collection => @story.aspect_links, :as => :aspect_link || 'There are no aspects to display.'

= render 'aspect_links/add_existing_aspect_form'

= render 'aspect_links/add_new_aspect_form'