- model_class = Character
.page-header
  %h1=t '.title', :default => t('helpers.titles.edit', :model => model_class.model_name.human, :default => "Edit #{model_class.model_name.human}")
= render :partial => "form"

%p
  %strong Aspects:
- @character.aspects.each do |aspect|
  %p= link_to aspect.title, aspect_path(aspect)

= render 'aspect_links/add_existing_aspect_form'
