- model_class = Character
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:story_id) + ':'
  %br
  = @character.story_id
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @character.name
%p
  %strong= model_class.human_attribute_name(:physical_stress) + ':'
  %br
  = @character.physical_stress
%p
  %strong= model_class.human_attribute_name(:mental_stress) + ':'
  %br
  = @character.mental_stress
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @character.description
%p
  %strong= model_class.human_attribute_name(:refresh) + ':'
  %br
  = @character.refresh
%p
  %strong= model_class.human_attribute_name(:character_idea) + ':'
  %br
  = @character.character_idea
%p
  %strong= model_class.human_attribute_name(:phase_trio_one) + ':'
  %br
  = @character.phase_trio_one
%p
  %strong= model_class.human_attribute_name(:phase_trio_two) + ':'
  %br
  = @character.phase_trio_two
%p
  %strong= model_class.human_attribute_name(:phase_trio_three) + ':'
  %br
  = @character.phase_trio_three

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), characters_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_character_path(@character), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), character_path(@character), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
